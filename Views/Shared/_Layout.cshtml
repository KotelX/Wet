<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Wet.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/0d577e797b.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-gradient bg-light">
            <div class="container">
                <a asp-controller="Home" asp-action="Index">
                    <img class="navbar-brand me-auto my-0" href="" src="/favicon.png" height="40" />
                </a>
                <button class="navbar-toggler"
                        type="button"
                        data-mdb-toggle="collapse"
                        data-mdb-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="me-auto"></div>
                    <ul class="navbar-nav h-5">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Profile">Диагнозы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Patients">Наши пициенты</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    
    <footer class="text-center text-lg-start bg-dark text-muted pt-2">
        <section>
            <div class="container-fluid text-center text-md-start mt-5">
                <div class="row mt-3">
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase fw-bold mb-4">Контакты</h6>
                        <div>
                            <p> <a class="text-decoration-none" href="https://goo.gl/maps/gzBHAv8pfMYndHPu8"> 440066 , Россия, г Нижний Новгород </a></p>
                            <p> <a class="text-decoration-none" href="mailto:lysyanyyva@std.mininuniver.ru"> Тел: +7 (910) XXX XX XX </a> </p>
                            <p> <a class="text-decoration-none" href="tel:+79108768478"> Почта: xxxxxxxxx-xxxxx_xx@yandex.ru </a> </p>
                        </div>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase fw-bold mb-4">
                            Полезные ссылки
                        </h6>
                        <p>
                            <a asp-controller="Home" asp-action="Index" class="text-reset">Главная</a>
                        </p>
                        <p>
                            <a asp-controller="Home" asp-action="Profile" class="text-reset">Диагнозы</a>
                        </p>
                        <p>
                            <a asp-controller="Home" asp-action="Patients" class="text-reset">Пациенты</a>
                        </p>
                    </div>
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <p><a <a class="text-decoration-none" href="https://www.viber.com/ru/"> <i class="fa-brands fa-viber"></i></i>Viber </a></p>
                    </div>
                </div>
            </div>
        </section>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>