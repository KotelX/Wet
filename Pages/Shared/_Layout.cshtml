<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Wet.styles.css" asp-append-version="true" />
</head>
<body class="m-0 bg-dark">
    <header>
        <nav class="navbar navbar-expand-lg justify-content-between bg-transparent">
            <div class="navbar-brand">
                <a href="#" class="my-3 mx-4" type="button" aria-label="Главная">
                    <img height="60" alt="" src="/favicon.png" />    
                </a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="d-lg-flex ml-lg-auto me-lg-5 h5" id="navbarNav">
                <ul class="navbar-nav collapse navbar-collapse text-secondary">
                    <li class="nav-item active mx-1">
                        <a class="nav-link" href="#"><span>Главная</span></a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link" href="#">О нас</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link" href="#">Пациенты</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody() //Код из основных страниц
            @if (true)
            {
                <br />
            }
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Wet - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>